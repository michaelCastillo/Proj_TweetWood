<?xml version="1.0" encoding="UTF-8"?>
<project name="module_twitter" default="compile.module.twitter">
  <dirname property="module.twitter.basedir" file="${ant.file.module_twitter}"/>
  
  <property name="module.jdk.home.twitter" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.twitter" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.twitter" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.twitter" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="twitter.output.dir" value="${module.twitter.basedir}/../../classes/production/Twitter"/>
  <property name="twitter.testoutput.dir" value="${module.twitter.basedir}/../../classes/test/Twitter"/>
  
  <path id="twitter.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="twitter.module.production.classpath">
    <path refid="${module.jdk.classpath.twitter}"/>
  </path>
  
  <path id="twitter.runtime.production.module.classpath">
    <pathelement location="${twitter.output.dir}"/>
  </path>
  
  <path id="twitter.module.classpath">
    <path refid="${module.jdk.classpath.twitter}"/>
    <pathelement location="${twitter.output.dir}"/>
  </path>
  
  <path id="twitter.runtime.module.classpath">
    <pathelement location="${twitter.testoutput.dir}"/>
    <pathelement location="${twitter.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.twitter">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.twitter">
    <patternset refid="excluded.from.module.twitter"/>
  </patternset>
  
  
  <target name="compile.module.twitter" depends="compile.module.twitter.production,compile.module.twitter.tests" description="Compile module Twitter"/>
  
  <target name="compile.module.twitter.production" depends="register.custom.compilers" description="Compile module Twitter; production classes"/>
  
  <target name="compile.module.twitter.tests" depends="register.custom.compilers,compile.module.twitter.production" description="compile module Twitter; test classes" unless="skip.tests"/>
  
  <target name="clean.module.twitter" description="cleanup module">
    <delete dir="${twitter.output.dir}"/>
    <delete dir="${twitter.testoutput.dir}"/>
  </target>
</project>